@model SV20T1020493.DomainModels.Category
@{
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Category/Delete/@Model.CategoryID">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên danh mục:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>             
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!SV20T1020493.BusinessLayers.CommonDataService.IsUsedCategory(Model.CategoryID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa!
                        </button>
                    }
                    <a href="~/Category" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>