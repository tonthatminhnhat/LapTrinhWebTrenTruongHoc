@model SV20T1020493.DomainModels.Category
@{
    <div class="box box-primary">
        <div class="box-body">
            <form action="~/Category/Save" method="post">

                <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />

                <div class="form-group">
                    <label>Tên danh mục:</label>
                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName">
                    @Html.ValidationMessage("CategoryName", new { @style = "color:#f00" })
                </div>
                <div class="form-group">
                    <label>Mô tả:</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy"></i> Lữu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
                <div class="form-group">
                    @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                </div>
            </form>
        </div>
    </div>
}
