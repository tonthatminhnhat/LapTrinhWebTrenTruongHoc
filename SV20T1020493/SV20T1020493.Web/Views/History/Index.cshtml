@model SV20T1020493.Web.Models.HistorySearchInput
@{
    ViewBag.Title = "Lịch sử";
    int rowCount = 0;
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form đầu vào tìm kiếm-->
        <form id="formSearch" action="~/History/Search" method="get" data-container="#searchResult">
            <div class="row container-fluid">

                <input name="PageSize" type="hidden" value="@Model.PageSize" />

                <div class="col-sm-2">
                    <select class="form-control" name="Work" onchange="doSearch(this.form,@Model.Page)">
                        <option value="" selected="@(Model.Work == "")">-- Hành động --</option>
                        <option value="Delete" selected="@(Model.Work == "Delete")"> Xóa</option>
                        <option value="Update" selected="@(Model.Work == "Update")">Cập nhật</option>
                        <option value="Insert" selected="@(Model.Work == "Insert")">Thêm</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input type="text" name="DateRange" class="form-control daterange-picker"
                           placeholder="" value="@Model.DateRange" onchange="doSearch(this.form,@Model.Page)" />
                </div>
                <div class="col-sm-2">
                    <select class="form-control" name="TableName" onchange="doSearch(this.form,@Model.Page)">
                        <option value="" selected="@(Model.TableName == "")">-- Bảng thao tác --</option>
                        <option value="Suppliers" selected="@(Model.TableName == "Suppliers")"> Nhà cung cấp</option>
                        <option value="Customers" selected="@(Model.TableName == "Customers")">Khách hàng</option>
                        <option value="Shippers" selected="@(Model.TableName == "Shippers")">Người giao hàng</option>
                        <option value="Employees" selected="@(Model.TableName == "Employees")">Nhân viên</option>
                        <option value="Categories" selected="@(Model.TableName == "Categories")">Loại hàng</option>
                        <option value="Products" selected="@(Model.TableName == "Products")">Mặt hàng</option>
                        <option value="ProductPhotos" selected="@(Model.TableName == "ProductPhotos")">Ảnh của mặt hàng</option>
                        <option value="ProductAttributes" selected="@(Model.TableName == "ProductAttributes")">Thuộc tính của mặt hàng</option>
                        <option value="Orders" selected="@(Model.TableName == "Orders")">Danh sách đơn hàng</option>
                        <option value="OrderDetails" selected="@(Model.TableName == "OrderDetails")">Sản phẩm của đơn hàng</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue"
                           class="form-control" value="@Model.SearchValue"
                           placeholder="Tìm kiếm theo tên nhân viên">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i> Tìm kiếm
                        </button>
                    </span>
                </div>
            </div>
        </form>
        @* Hien thi thong tin *@
        <div id="searchResult"></div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });
            doSearch("#formSearch", @Model.Page);
        });
    </script>
}





