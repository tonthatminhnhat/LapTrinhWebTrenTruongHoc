@model SV20T1020493.Web.Models.ProductEditResult
@{
    int rowCount = 0;
}
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin mặt hàng</h3>
        
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">

        <form class="form-horizontal" action="~/Product/Save" method="post" enctype="multipart/form-data">
            
            <input type="hidden" name="Product.ProductID" value="@Model.Product.ProductID" />
           
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Product.ProductName" value="@Model.Product.ProductName">
                    @Html.ValidationMessage("ProductName", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" name="Product.ProductDescription">@Model.Product.ProductDescription</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Product.CategoryID">
                        <option value="0">-- Loại hàng --</option>
                        @foreach (var item in SV20T1020493.BusinessLayers.CommonDataService.ListOfCategories(out rowCount, 1, 0, ""))
                        {
                            if (@item.CategoryID == Model.Product.CategoryID)
                            {
                                <option value="@item.CategoryID" selected>@item.CategoryName</option>
                            }
                            else
                            {
                                <option value="@item.CategoryID">@item.CategoryName</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessage("CategoryID", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Product.SupplierID">
                        <option value="0">-- Nhà cung cấp --</option>
                        @foreach (var item in SV20T1020493.BusinessLayers.CommonDataService.ListOfSuppliers(out rowCount, 1, 0, ""))
                        {
                            if (@item.SupplierID == @Model.Product.SupplierID)
                            {
                                <option value="@item.SupplierID" selected>@item.SupplierName</option>
                            }
                            else
                            {
                                <option value="@item.SupplierID">@item.SupplierName</option>
                            }
                        }
                    </select>

                    @Html.ValidationMessage("SupplierID", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Product.Unit" value="@Model.Product.Unit">
                    @Html.ValidationMessage("Unit", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Product.Price" value="@Model.Product.Price.ToString("N0")">
                    @Html.ValidationMessage("Price", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="Product.IsSelling"
                            @(Model.Product.IsSelling ? "checked" : "")>Hiện đang được bán
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Product.Photo" value="@Model.Product.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    @Html.ValidationMessage("uploadPhoto", new { @style = "color:#f00" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/products/@Model.Product.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                    @Html.ValidationMessage("Success", new { @style = "color:#3cb457" })
                </div>
            </div>
        </form>

    </div>

</div>

@if (ViewBag.IsEdit)
{
    <div class="box box-info">
        <div class="box-header with-border ">
            <h3 class="box-title">Thư viện ảnh</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title=""
                        data-original-title="Collapse" href="~/Product/Photo/@Model.Product.ProductID?method=add">
                    <i class="fa fa-minus"></i>

                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-gray">
                        <th>Ảnh</th>
                        <th>Mô tả/tiêu đề</th>
                        <th>Thứ tự hiển thị</th>
                        <th>Ẩn ảnh</th>
                        <th class="text-right">
                            <a class="btn btn-xs btn-primary" href="~/Product/Photo/@Model.Product.ProductID?method=add">
                                <i class="fa fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DataPhotos)
                    {
                        <tr>
                            <td style="vertical-align:middle">
                                <img src="~/images/products/@item.Photo" alt="@item.Photo" style="width:100px" />
                            </td>
                            <td style="vertical-align:middle;">
                                @item.Description
                            </td>
                            <td style="vertical-align:middle;">@item.DisplayOrder</td>
                            <td style ="vertical-align:middle;">@(item.IsHidden ? "✔" : "")</td>
                            
                            <td style="vertical-align:middle; text-align:right">
                                <a class="btn btn-xs btn-primary" href="~/Product/Photo/@item.ProductID?method=edit&photoId=@item.PhotoID">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="~/Product/Photo/@item.ProductID?method=delete&photoId=@item.PhotoID" 
                                onclick="return confirm('Xóa ảnh của mặt hàng hay không?')">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="box box-info">

        <div class="box-header with-border ">
            <h3 class="box-title">Thuộc tính của mặt hàng</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" 
                title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="box-body">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-gray">
                        <th>Tên thuộc tính</th>
                        <th>Giá trị thuộc tính</th>
                        <th>Thứ tự hiển thị</th>
                        <th class="text-right">
                            <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.Product.ProductID?method=add">
                                <i class="fa fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DataAttributes)
                    {
                        <tr>
                            <td style="vertical-align:middle">@item.AttributeName</td>
                            <td style="vertical-align:middle;">@item.AttributeValue</td>
                            <td style="vertical-align:middle;">@item.DisplayOrder</td>
                            <td style="vertical-align:middle; text-align:right">
                                <a class="btn btn-xs btn-primary"         
                                href="~/Product/Attribute/@item.ProductID?method=edit&attributeId=@item.AttributeID">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger"
                                   href="~/Product/Attribute/@item.ProductID?method=delete&attributeId=@item.AttributeID"
                                   onclick="return confirm('Xóa thuộc tính này của mặt hàng?')">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer text-center">
        </div>

    </div>
}