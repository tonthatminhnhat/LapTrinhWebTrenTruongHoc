@model SV20T1020493.Web.Models.ProductSearchResult
@{
    Layout = null;
}
<div>
    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> mặt hàng trong <strong>@Model.PageCount</strong>  trang
    </p>
    <div class="table-resonsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Ảnh</th>
                    <th>Tên mặt hàng</th>
                    <th>Đơn bị tính</th>
                    <th>Giá</th>
                    <th>Ngừng bán?</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            @foreach (var item in Model.Data)
            {
                <tbody>
                    <tr>
                        <td>
                            <img style="width:80px" src="~/images/products/@item.Photo" alt="Ảnh" />
                        </td>
                        <td>
                            @item.ProductName
                            <br />
                            <i>@item.ProductDescription</i>
                        </td>
                        <td>@item.Unit</td>
                        <td>@item.Price.ToString("N0")</td>
                        <td>@(item.IsSelling ? "" : "✔")</td>
                        <td class="text-right">
                            <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
    @if (Model.PageCount != 1)
    {
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (Model.Page == p)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                     <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                   
                       @*  <a href="~/Product?page=@p&searchValue=@Model.SearchValue&categoryID=@Model.CategoryID&supplierID=@Model.SupplierID">@p</a>
                    *@
                   
                }
            }
        </ul>
    </div>
    }
</div>