@model SV20T1020493.DomainModels.Shipper
@{
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Shipper/Delete/@Model.ShipperID">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Shipper:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!SV20T1020493.BusinessLayers.CommonDataService.IsUsedShipper(Model.ShipperID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa!
                        </button>
                    }
                    <a href="~/Shipper" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>