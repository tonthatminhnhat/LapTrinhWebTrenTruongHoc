@model SV20T1020493.DomainModels.Shipper
@{
    <div class="box box-primary">
        <div class="box-body">
            <form action="~/Shipper/Save" method="post">

                <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />

                <div class="form-group">
                    <label>Tên shipper:</label>
                    <input type="text" class="form-control" name="ShipperName" value="@Model.ShipperName">
                    @Html.ValidationMessage("ShipperName", new { @style = "color:#f00" })
                    </div>

                <div class="form-group">
                    <label>Điện thoại:</label>
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    @Html.ValidationMessage("Phone", new { @style = "color:#f00" })
                    </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy"></i> Lữu dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
                <div class="form-group">
                    @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                </div>
            </form>
        </div>
    </div>
}
