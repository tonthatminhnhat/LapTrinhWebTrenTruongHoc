@model SV20T1020493.DomainModels.Supplier
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Delete/@Model.SupplierID" method="post">
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.SupplierName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người liên hệ:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tỉnh thành:</label>
                <div class="col-sm-10">
                <p class="form-control-static">@Model.Province</p>
                </div>

            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!SV20T1020493.BusinessLayers.CommonDataService.IsUsedSupplier(Model.SupplierID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa!
                        </button>
                    }
                    <a href="~/Supplier" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>


